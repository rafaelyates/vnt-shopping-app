{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "pretty": true,
        "emitBOM": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom",
            "dom.iterable"
        ]
    }
}
